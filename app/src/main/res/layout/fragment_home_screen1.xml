<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToOutline="true"
    android:background="#181A1A"
    tools:context="ui.fragments.HomeScreen1Fragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/frame_96"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/good_aftern"
                    android:layout_width="198dp"
                    android:layout_height="29dp"
                    android:text="@string/good_afternoon"
                    android:textAppearance="@style/good_afternoon"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/line"/>
            </LinearLayout>
            <ImageView
                android:layout_width="48dp"
                android:id="@+id/profile_pic"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ellipse_2"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="129dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rel_status"
                android:layout_height="100dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/status_rv"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="16dp"
                        tools:itemCount="1"
                        tools:listitem="@layout/custom_status"
                        />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/frame_97"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="16dp"
                android:layout_below="@+id/rel_status"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rc_sel"
                    tools:itemCount="1"
                    android:orientation="horizontal"
                    tools:listitem="@layout/custom_tab_bar"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/frame_13"
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:layout_below="@id/frame_97"
                android:layout_marginVertical="32dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/premium_banner"
                >
                <TextView
                    android:id="@+id/get_unlimit"
                    android:layout_width="266dp"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginHorizontal="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:text="@string/get_unlimited"
                    android:textAppearance="@style/get_unlimited"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/terms_condi"
                    android:layout_width="130dp"
                    android:layout_height="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="171dp"
                    android:text="@string/terms_condition"
                    android:textAppearance="@style/terms_condition"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/some_id"
                    android:layout_width="105dp"
                    android:layout_height="43dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="88dp"
                    android:text="@string/some_id"
                    android:textAppearance="@style/some_id"
                    android:gravity="center_vertical"
                    />
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/book_cover"
                    android:layout_width="58.85dp"
                    android:layout_height="85dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="162dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="96dp"
                    android:clipToOutline="true"
                    android:elevation="2.38dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/book_2"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/book_cover2"
                    android:layout_width="58.85dp"
                    android:layout_height="85dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="162dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="191dp"
                    android:clipToOutline="true"
                    android:elevation="2.38dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/book_cover_2"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/book_cover3"
                    android:layout_width="58.85dp"
                    android:layout_height="85dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="226dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="83dp"
                    android:elevation="2.38dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/book_1"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/book_cover4"
                    android:layout_width="58.85dp"
                    android:layout_height="85dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="226dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="178dp"
                    android:clipToOutline="true"
                    android:elevation="2.38dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/book_cover_3"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/book_cover5"
                    android:layout_width="58.85dp"
                    android:layout_height="85dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="290dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="66dp"
                    android:clipToOutline="true"
                    android:elevation="2.38dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/book_3"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/book_cover6"
                    android:layout_width="58.85dp"
                    android:layout_height="85dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="290dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="161dp"
                    android:clipToOutline="true"
                    android:elevation="2.38dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/book_4"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frame_27"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/frame_13"
                >
                <RelativeLayout
                    android:id="@+id/frame_25"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_height="wrap_content"
                    >

                    <include
                        layout="@layout/custom_trending_show_all"/>

                    <RelativeLayout
                        android:id="@+id/frame_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/rl_trending"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rv_trending"
                            tools:itemCount="1"
                            tools:listitem="@layout/trending_book_layout"
                            />
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"
                            android:indeterminateDrawable="@drawable/progress_bar"
                            android:layout_centerInParent="true"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/frame_26"
                    android:layout_width="374dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="24dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_below="@id/frame_25"
                    >

                    <include
                        layout="@layout/custom_trending_show_all"/>
                    <RelativeLayout
                        android:id="@+id/frame_14_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/rl_trending"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:itemCount="1"
                            tools:listitem="@layout/trending_book_layout"
                            />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frame_27_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="24dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_below="@id/frame_26"
                    >

                    <include
                        layout="@layout/custom_five_min_show_all"/>
                    <RelativeLayout
                        android:id="@+id/frame_14_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/rl_5_min"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:itemCount="1"
                            tools:listitem="@layout/trending_book_layout"
                            />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>




    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/play_bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:visibility="gone"
        android:background="#424343"
        >
        <ImageView
            android:layout_width="38dp"
            android:id="@+id/cover_play"
            android:layout_height="match_parent"
            android:src="@drawable/book_2"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            />
        <RelativeLayout
            android:id="@+id/frame_70"
            android:layout_toRightOf="@+id/cover_play"
            android:layout_width="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="12dp"
            android:layout_height="53dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/continue_li"
                    android:layout_width="225dp"
                    android:layout_height="17dp"
                    android:text="@string/continue_li"
                    android:textAppearance="@style/continue_li"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/managers_wh"
                    android:layout_width="181dp"
                    android:layout_height="28dp"
                    android:text="@string/managers_wh"
                    android:textAppearance="@style/managers_wh"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/frame_117"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                >
                <RelativeLayout
                    android:id="@+id/frame_81"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/play_btn_layout"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:id="@+id/play"
                        android:src="@drawable/uil_play"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/frame_81_2"
                    android:layout_width="32dp"
                    android:layout_toRightOf="@id/frame_81"
                    android:layout_height="32dp"
                    android:background="@drawable/play_btn_layout"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:id="@+id/forward"
                        android:src="@drawable/uil_forward"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>