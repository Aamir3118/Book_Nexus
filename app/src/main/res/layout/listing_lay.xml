<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_18"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="8dp"
    >
    <RelativeLayout
        android:id="@+id/explore_book"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:clipToOutline="true"
        android:elevation="4dp"
        android:layout_marginBottom="8dp"
        >
        <ImageView
            android:id="@+id/list_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/book_2"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frame_21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/explore_book"
        android:layout_marginVertical="8dp"
        >
        <TextView
            android:id="@+id/list_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/the_good_guy"
            android:textAppearance="@style/the_good_guy"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
</RelativeLayout>