<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AudioPlayerFragment"
    android:clipToOutline="true"
    android:background="#181A1A"
    >
    <ImageView
        android:id="@+id/bg_img"
        android:layout_width="match_parent"
        android:layout_height="379dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="124dp"
        />
    <RelativeLayout
        android:id="@+id/frame_107"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="13dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ic_round"
            android:src="@drawable/back_button"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/charm_menu"
            android:layout_alignParentEnd="true"
            android:src="@drawable/charm_menu"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frame_111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@+id/bg_img"
        >
        <RelativeLayout
            android:id="@+id/frame_108"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
