<!--                            android:progressTint="@color/white" />-->

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/frame_102"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/frame_101"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0:00"
                            android:textSize="12sp"
                            android:textColor="#EAF4F4"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            android:id="@+id/end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#EAF4F4"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_vertical"
                            />
                    </RelativeLayout>

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/frame_99"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_below="@id/frame_103"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:id="@+id/skip_back"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/uil_skip"
                        />
                    <RelativeLayout
                        android:layout_toRightOf="@id/skip_back"
                        android:id="@+id/frame_98"
                        android:layout_width="174dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="64dp"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:id="@+id/rl_fluent_skip_back"
                            >
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:id="@+id/fluent_skip_back"
                                android:src="@drawable/fluent_skip_back"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/frame_81"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:paddingVertical="12dp"
                            android:paddingLeft="14dp"
                            android:paddingRight="10dp"
                            android:layout_marginHorizontal="31dp"
                            android:layout_toRightOf="@id/rl_fluent_skip_back"
                            android:background="@drawable/play_btn_layout"
                            >
                            <ProgressBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:visibility="gone"
                                android:id="@+id/progress"
                                android:indeterminate="true"
                                android:indeterminateDrawable="@drawable/progress_bar"
                                />
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:id="@+id/play_start"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentBottom="true"
                                android:clipToOutline="true"
                                android:src="@drawable/uil_play"
                                android:visibility="visible"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@id/frame_81"
                            android:id="@+id/rl_fluent_skip_forward"
                            >
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:id="@+id/fluent_skip_forward"
                                android:src="@drawable/fluent_skip_forward"
                                />
                        </RelativeLayout>

                    </RelativeLayout>
                    <ImageView
                        android:layout_width="24dp"
                        android:id="@+id/skip_forward"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        android:src="@drawable/uil_skip_2"
                        android:layout_alignParentEnd="true"
                        />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/frame_109"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frame_108"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/moon"
                android:src="@drawable/uil_moon"
                />
            <TextView
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0x"
                android:textSize="14sp"
                android:textColor="#EAF4F4"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frame_104"
        android:layout_width="match_parent"
        android:layout_height="379dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        >
        <View
            android:id="@+id/rectangle_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/detail_page_bg"
            />

        <RelativeLayout
            android:id="@+id/book_cover"
            android:layout_width="173dp"
            android:layout_height="249dp"
            android:layout_centerInParent="true"
            android:elevation="4dp">

<!--            <ImageView-->
<!--                android:id="@+id/elevated_book"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:elevation="5dp"-->
<!--                android:scaleType="fitXY" />-->
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>