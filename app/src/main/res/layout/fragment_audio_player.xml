                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_Book_Name"
                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Futurama"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/by_kory_kog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By Kory Kogon, Suzette Blakemore, and James wood"
                    android:textSize="12sp"
                    android:textColor="#EAF4F4"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_below="@+id/ll_Book_Name"
                android:id="@+id/frame_110"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:id="@+id/frame_103"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:id="@+id/frame_101"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginBottom="8dp"
                        >
