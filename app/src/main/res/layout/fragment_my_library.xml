<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#181A1A"
    tools:context="ui.fragments.MyLibraryFragment">

    <include
        layout="@layout/top_heading_layout"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/frame_33"
        android:id="@+id/frame_138"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="16dp"
        >
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/frame_17"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/my_library_topics"
            >
            <RelativeLayout
                android:id="@+id/uil_bookmar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToOutline="true"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/uil_bookmark"
                    android:id="@+id/bookmark"
                    android:layout_marginVertical="12dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="4dp"
                    />
                <TextView
                    android:id="@+id/saved_books"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/saved_books"
                    android:layout_marginVertical="12dp"
                    android:layout_toRightOf="@id/bookmark"
                    android:layout_marginEnd="2dp"
                    android:textAppearance="@style/saved_books"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/frame_17_2"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/my_library_topics"
            >
            <RelativeLayout
                android:id="@+id/uil_headphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToOutline="true"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/head_black"
                    android:id="@+id/headphone"
                    android:layout_marginVertical="12dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="4dp"
                    />
                <TextView
                    android:id="@+id/completed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/in_progress"
                    android:layout_marginVertical="12dp"
                    android:layout_toRightOf="@id/headphone"
                    android:textAppearance="@style/saved_books"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/frame_17_3"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/my_library_topics"
            >
            <RelativeLayout
                android:id="@+id/uil_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToOutline="true"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/checked_icon"
                    android:id="@+id/completed_img"
                    android:layout_marginVertical="12dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="4dp"
                    />
                <TextView
                    android:id="@+id/complete_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/completed"
                    android:layout_marginVertical="12dp"
                    android:layout_toRightOf="@id/completed_img"
                    android:textAppearance="@style/saved_books"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/explore_rv"
        android:layout_below="@id/frame_138"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        tools:itemCount="1"
        tools:listitem="@layout/trending_book_layout"
        />

</RelativeLayout>