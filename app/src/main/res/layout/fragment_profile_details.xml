<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181A1A"
    tools:context=".fragments.ProfileDetailsFragment">

    <include
        android:id="@+id/top_back"
        layout="@layout/listing_page_app_bar"
        />
    <RelativeLayout
        android:id="@+id/frame_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/top_back"
        >
        <include
            layout="@layout/top_heading_layout"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frame_135"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame_33"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        >
        <RelativeLayout
            android:id="@+id/frame_157"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_centerInParent="true"
                android:id="@+id/frame_151"
                android:layout_width="90dp"
                android:layout_height="90dp"
                >
                <View
                    android:id="@+id/ellipse_1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/ellipse_2"
                    />
                <View
                    android:id="@+id/ellipse_6"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/ellipse_6"
                    />
                <RelativeLayout
                    android:id="@+id/uil_upload"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="7dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="7dp"
                    android:clipToOutline="true"
                    android:background="@drawable/uil_upload"
                    />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/change_prof"
                android:layout_below="@id/frame_151"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_prof"
                android:padding="10dp"
                android:textAppearance="@style/show_all"
                android:gravity="center_horizontal|center_vertical"
                />
        </RelativeLayout>

        <View
            android:id="@+id/vector_4"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_below="@id/frame_157"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/divider_layout"
            />
        <RelativeLayout
            android:layout_below="@id/vector_4"
            android:id="@+id/frame_156"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content"
            >
            <include
                layout="@layout/acc_details_lay"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>