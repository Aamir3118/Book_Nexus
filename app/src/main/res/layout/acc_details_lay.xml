<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_152"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/name_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/your_name"
            android:layout_width="358dp"
            android:layout_height="14dp"
            android:text="Your Name"
            android:textSize="12sp"
            android:textColor="#EAF4F4"
            android:gravity="center_vertical"
            />
        <RelativeLayout
            android:id="@+id/text_field"
            android:layout_below="@id/your_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/acc_edit_text_lay"
            >
            <TextView
                android:id="@+id/john_doe"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/john_doe"
                android:textAppearance="@style/john_doe"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="14dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/icon_next_forward"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/email_lay"
        android:layout_below="@id/name_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/email"
            android:layout_width="358dp"
            android:layout_height="14dp"
            android:text="Email"
            android:textSize="12sp"
            android:textColor="#EAF4F4"
            android:gravity="center_vertical"
            />
        <RelativeLayout
            android:id="@+id/text_field2"
            android:layout_below="@id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/acc_edit_text_lay"
            >
            <TextView
                android:id="@+id/email_txt"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/john_doe_ex"
                android:textAppearance="@style/john_doe"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="14dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/icon_next_forward"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dob_lay"
        android:layout_below="@id/email_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/dob_txt"
            android:layout_width="358dp"
            android:layout_height="14dp"
            android:text="Date Of Birth"
            android:textSize="12sp"
            android:textColor="#EAF4F4"
            android:gravity="center_vertical"
            />
        <RelativeLayout
            android:id="@+id/text_field3"
            android:layout_below="@id/dob_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/acc_edit_text_lay"
            >
            <TextView
                android:id="@+id/date"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textAppearance="@style/john_doe"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="14dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/icon_next_forward"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>