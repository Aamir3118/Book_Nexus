<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_account_graph"
    app:startDestination="@id/accountScreenFragment">

    <fragment
        android:id="@+id/accountScreenFragment"
        android:name="com.example.books_app.ui.fragments.AccountScreenFragment"
        android:label="fragment_account_screen"
        tools:layout="@layout/fragment_account_screen" >
        <action
            android:id="@+id/action_accountScreenFragment_to_profileDetailsFragment"
            app:destination="@id/profileDetailsFragment" />
        <action
            android:id="@+id/action_accountScreenFragment_to_selectAccountFragment"
            app:destination="@id/selectAccountFragment" />
        <action
            android:id="@+id/action_accountScreenFragment_to_premiumPlansFragment2"
            app:destination="@id/premiumPlansFragment2" />
    </fragment>
    <fragment
        android:id="@+id/profileDetailsFragment"
        android:name="com.example.books_app.ui.fragments.ProfileDetailsFragment"
        android:label="fragment_profile_details"
        tools:layout="@layout/fragment_profile_details" >
        <action
            android:id="@+id/action_profileDetailsFragment_to_accountScreenFragment"
            app:destination="@id/accountScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/addPaymentFragment"
        android:name="com.example.books_app.ui.fragments.AddPaymentFragment"
        android:label="fragment_add_payment"
        tools:layout="@layout/fragment_add_payment" />
    <fragment
        android:id="@+id/selectAccountFragment"
        android:name="com.example.books_app.ui.fragments.SelectAccountFragment"
        android:label="fragment_select_account"
        tools:layout="@layout/fragment_select_account" >
        <action
            android:id="@+id/action_selectAccountFragment_to_addPaymentFragment"
            app:destination="@id/addPaymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/premiumPlansFragment2"
        android:name="com.example.books_app.ui.fragments.PremiumPlansFragment"
        android:label="fragment_premium_plans"
        tools:layout="@layout/fragment_premium_plans" >
        <action
            android:id="@+id/action_premiumPlansFragment2_to_successPaymentFragment2"
            app:destination="@id/successPaymentFragment2" />
    </fragment>
    <fragment
        android:id="@+id/successPaymentFragment2"
        android:name="com.example.books_app.ui.fragments.SuccessPaymentFragment"
        android:label="fragment_success_payment"
        tools:layout="@layout/fragment_success_payment" />
</navigation>